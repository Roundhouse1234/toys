#!/bin/sh
VG=vagrant

case "$1" in
rm)
	if [ -n "$2" ]; then
		$VG destroy $2
	else
		V=$($0 ls | grep `pwd` | awk '{print $1}')
		if [ -z "$V" ]; then
			echo "Usage: vg rm"
		else
			$VG detroy $V
		fi
	fi
	;;
ls)
	$VG global-status | grep virtualbox | awk '{print $1" "$5}'
	;;
ssh)
	if [ -n "$2" ]; then
		$VG ssh $2
	else
		A=$($0 ls | grep `pwd` |cut -d ' ' -f 1)
		if [ -z "$A" ]; then
			A=`$0 ls | head -n1 |cut -d ' ' -f 1`
		fi
		if [ -n "$A" ]; then
			$VG ssh $A
		fi
	fi
	;;
up)
	$VG up
	;;
down|halt)
	if [ -z "$2" ]; then
		A=$($0 ls | grep `pwd` |cut -d ' ' -f 1)
		if [ -n "$A" ]; then
			$VG halt $A
		else
			echo "Usage: vg down [id]"
		fi
	else
		$VG halt $2
	fi
	;;

'')
	$0 ls | grep `pwd`
	;;
-h|*)
	echo "Usage: vg [ls|rm|ssh|up|down]"
	;;
esac
